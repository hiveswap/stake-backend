generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model RawEvents {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  timestamp DateTime
  blockNum  Int
  userAddr  String
  amount    String
  tokenAddr String
  lpToken   String
}

model Credits {
  userAddr  String   @id @map("_id")
  curCredit Int
  timestamp DateTime
}

model CreditHistory {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userAddr  String
  timestamp DateTime
  credit    Int
}

model IndexedBlock {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  blockNumber Int
}
