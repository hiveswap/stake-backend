generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model RawStakeEvents {
  id         Int      @id @default(autoincrement())
  timestamp  DateTime
  userAddr   String
  amount     String
  tokenAddr  String
  lTokenAddr String
}

model RawAddLiquidityEvents {
  id             Int      @id @default(autoincrement())
  timestamp      DateTime
  nftID          String
  pool           String
  liquidityDelta String
  amountX        String
  amountY        String
}

model TokenMap {
  id         Int    @id @default(autoincrement())
  tokenAddr  String @unique
  lTokenAddr String @unique
}

model Credits {
  userAddr  String   @id
  curCredit Int
  timestamp DateTime
}

model CreditHistory {
  id        Int      @id @default(autoincrement())
  userAddr  String
  timestamp DateTime
  credit    Int
}

model IndexedRecord {
  id          Int      @id @default(autoincrement())
  blockNumber Int
  updateTime  DateTime
}
