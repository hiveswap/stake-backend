generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model RawEvents {
  id        Int      @id @default(autoincrement())
  timestamp DateTime
  userAddr  String
  amount    String
  tokenAddr String
}

model Credits {
  userAddr  String   @id
  curCredit Int
  timestamp DateTime
}

model CreditHistory {
  id        Int      @id @default(autoincrement())
  userAddr  String
  timestamp DateTime
  credit    Int
}

model IndexedRecord {
  id          Int      @id @default(autoincrement())
  blockNumber Int
  updateTime  DateTime
}
